<body>
  <div class="container">
    <div class="left">
      <div class="title">LIMITED-TIME BUFFET</div>
      <div class="subtitle">LUNCH SPECIAL</div>
      <div class="price">RM 39.9</div>
    </div>
    <div class="right">
      <div id="countdown" class="timer"></div>
    </div>
  </div>

  <script>
    function startCountdown() {
      const endTime = new Date();
      endTime.setHours(15, 0, 0, 0); // 15:00:00

      function updateTimer() {
        const now = new Date();
        let diff = endTime - now;

        if (diff <= 0) {
          document.getElementById("countdown").textContent = "00:00:00";
          clearInterval(timerInterval);
          return;
        }

        const hours = String(Math.floor(diff / (1000 * 60 * 60))).padStart(2, "0");
        const minutes = String(Math.floor((diff / (1000 * 60)) % 60)).padStart(2, "0");
        const seconds = String(Math.floor((diff / 1000) % 60)).padStart(2, "0");

        const countdownEl = document.getElementById("countdown");
        countdownEl.textContent = `${hours}:${minutes}:${seconds}`;

        // 最后 10 分钟闪烁
        if (diff <= 10 * 60 * 1000) {
          countdownEl.classList.add("blink");
        } else {
          countdownEl.classList.remove("blink");
        }
      }

      updateTimer();
      const timerInterval = setInterval(updateTimer, 1000);
    }

    startCountdown();
  </script>
</body>
